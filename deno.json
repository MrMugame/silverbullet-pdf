{
  "imports": {
    "$sb/": "https://deno.land/x/silverbullet@0.10.0/plug-api/",

    "esbuild": "https://deno.land/x/esbuild@v0.25.0/mod.js",
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.10.3",
    "html-minifier-terser": "https://esm.sh/html-minifier-terser@7.2.0",
    "@std/cli": "jsr:@std/cli"
  },
  "tasks": {
    "build": "deno run -A build_viewer.ts",
    "debug": "deno run -A build_viewer.ts --debug"
  },
  "compilerOptions": {
    "lib": [
      "es2023",
      "dom",
      "deno.ns"
    ],
    "types": ["./src/global.d.ts"]
  },
  "lint": {
    "exclude": [
      "dist",
      "pdfviewer.plug.js"
    ],
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  }
}